{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "utils - Vectorize Inspector",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/utils/vectorize-inspector",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "outputCapture": "std"
    },
    {
      "name": "frontend - public (local)",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/frontend-public",
      "runtimeExecutable": "npx",
      "runtimeArgs": ["wrangler", "dev"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "outputCapture": "std"
    },
    {
      "name": "frontend - public (deploy)",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/frontend-public",
      "runtimeExecutable": "npx",
      "runtimeArgs": ["wrangler", "deploy"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "outputCapture": "std"
    },
    {
      "name": "frontend - admin (local)",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/frontend-admin",
      "runtimeExecutable": "npx",
      "runtimeArgs": ["wrangler", "dev"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "outputCapture": "std"
    },
    {
      "name": "frontend - admin (deploy)",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/frontend-admin",
      "runtimeExecutable": "npx",
      "runtimeArgs": ["wrangler", "deploy"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "outputCapture": "std"
    },
    {
      "name": "backend - Development",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "main:app",
        "--host",
        "0.0.0.0",
        "--port",
        "2090",
        "--reload"
      ],
      "cwd": "${workspaceFolder}/backend",
      "env": {
        "ENVIRONMENT": "development"
      },
      "console": "integratedTerminal",
      "justMyCode": false
    }
  ]
}
