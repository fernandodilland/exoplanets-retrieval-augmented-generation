{
  // Tasks para el proyecto Vectorize Inspector
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Vectorize: Dev Server",
      "type": "shell",
      "command": "npm",
      "args": ["run", "dev"],
      "options": {
        "cwd": "${workspaceFolder}/utils/vectorize-inspector"
      },
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^([^\\s].*)\\((\\d+|\\d+,\\d+|\\d+,\\d+,\\d+,\\d+)\\):\\s+(error|warning|info)\\s+(TS\\d+)\\s*:\\s*(.*)$",
          "file": 1,
          "location": 2,
          "severity": 3,
          "code": 4,
          "message": 5
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*wrangler dev.*$",
          "endsPattern": "^.*Ready on.*$"
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Vectorize: Deploy",
      "type": "shell",
      "command": "npm",
      "args": ["run", "deploy"],
      "options": {
        "cwd": "${workspaceFolder}/utils/vectorize-inspector"
      },
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Wrangler: List Vectors",
      "type": "shell",
      "command": "wrangler",
      "args": [
        "vectorize",
        "list-vectors",
        "autorag-rag-exoplanets",
        "--count=100"
      ],
      "options": {
        "cwd": "${workspaceFolder}/utils/vectorize-inspector"
      },
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Wrangler: Index Info",
      "type": "shell",
      "command": "wrangler",
      "args": ["vectorize", "info", "autorag-rag-exoplanets"],
      "options": {
        "cwd": "${workspaceFolder}/utils/vectorize-inspector"
      },
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Wrangler: Export Vectors to JSON",
      "type": "shell",
      "command": "cmd",
      "args": [
        "/c",
        "wrangler vectorize list-vectors autorag-rag-exoplanets --count=1000 > exports/vectorize-export-%date:~-4,4%%date:~-10,2%%date:~-7,2%-%time:~0,2%%time:~3,2%%time:~6,2%.json"
      ],
      "options": {
        "cwd": "${workspaceFolder}/utils/vectorize-inspector"
      },
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Frontend Public: Dev Local",
      "type": "shell",
      "command": "npx",
      "args": ["wrangler", "dev"],
      "options": {
        "cwd": "${workspaceFolder}/frontend-public"
      },
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^([^\\s].*)\\((\\d+|\\d+,\\d+|\\d+,\\d+,\\d+,\\d+)\\):\\s+(error|warning|info)\\s+(TS\\d+)\\s*:\\s*(.*)$",
          "file": 1,
          "location": 2,
          "severity": 3,
          "code": 4,
          "message": 5
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*Starting.*$",
          "endsPattern": "^.*Ready on.*$"
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "group": "frontend"
      }
    },
    {
      "label": "Frontend Public: Deploy",
      "type": "shell",
      "command": "npx",
      "args": ["wrangler", "deploy"],
      "options": {
        "cwd": "${workspaceFolder}/frontend-public"
      },
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "group": "frontend"
      }
    }
  ]
}
